{
  "name": "monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "bunx @biomejs/biome lint *",
    "format": "bunx @biomejs/biome format --write *",
    "clear": "bun clear:top && bun run --cwd packages/ui clear && bun run --cwd apps/web clear &&  bun run --cwd apps/admin clear &&  bun run --cwd apps/backend clear",
    "clear:top": "rm -rf node_modules && rm -rf bun.lockb && rm -rf .turbo",
    "clean": "turbo clean",
    "ui:add": "bun run --cwd packages/ui ui:add"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "i18next": "^23.11.4",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^14.1.1",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.37",
    "tailwindcss": "^3.4.1",
    "turbo": "^1.12.5",
    "typescript": "latest"
  }
}
