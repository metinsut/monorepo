{
  "name": "monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clear": "rm -rf node_modules && rm -rf bun.lockb && rm -rf .turbo && rm -rf apps/web/.next && bun i",
    "clean": "turbo clean",
    "ui:add": "bun run --cwd packages/ui ui:add"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/node": "^20",
    "@types/bun": "latest",
    "typescript": "latest",
    "postcss": "^8",
    "autoprefixer": "^10.0.1",
    "turbo": "^1.12.5",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1"
  }
}
